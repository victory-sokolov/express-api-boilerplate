{
    "name": "express-api-boilerplate",
    "version": "0.0.1",
    "type": "module",
    "description": "",
    "main": "./src/app.ts",
    "scripts": {
        "star": "cross-env NODE_ENV=production ts-node --files -r ./src/app.ts",
        "dev": " node --watch --experimental-specifier-resolution=node --loader ts-node/esm ./src/app.ts",
        "prettier": "prettier \"**/*.+(js|jsx|json|css|md)\"",
        "prettier:write": "prettier --write \"**/*.+(js|jsx|json|css|md)\""
    },
    "ts-node": {
        "esm": true
    },
    "keywords": [
        "express",
        "api",
        "boilerplate"
    ],
    "author": "Viktor Sokolov <viktorsokolov.and@gmail.com> (https://github.com/victory-sokolov)",
    "license": "MIT",
    "dependencies": {
        "dotenv": "16.3.1",
        "express": "4.18.2",
        "pino": "8.17.2",
        "pino-pretty": "10.3.1"
    },
    "devDependencies": {
        "@types/express": "4.17.21",
        "@types/node": "20.11.5",
        "cross-env": "7.0.3",
        "prettier": "3.2.4",
        "ts-node": "10.9.2",
        "ts-node-dev": "2.0.0",
        "typescript": "5.3.3"
    }
}
